<plugin>

   <extension point="org.eclipse.ui.newWizards">
      <category
            id="org.eclipse.emf.ecore.Wizard.category.ID"
            name="%_UI_Wizard_category"/>
      <wizard
            id="todolist.presentation.TodolistModelWizardID"
            name="%_UI_TodolistModelWizard_label"
            class="todolist.presentation.TodolistModelWizard"
            category="org.eclipse.emf.ecore.Wizard.category.ID"
            icon="icons/full/obj16/TodolistModelFile.gif">
         <description>%_UI_TodolistModelWizard_description</description>
         <selection class="org.eclipse.core.resources.IResource"/>
      </wizard>
   </extension>

   <extension point="org.eclipse.ui.editors">
      <editor
            id="todolist.presentation.TodolistEditorID"
            name="%_UI_TodolistEditor_label"
            icon="icons/full/obj16/TodolistModelFile.gif"
            extensions="todolist"
            class="todolist.presentation.TodolistEditor"
            contributorClass="todolist.presentation.TodolistActionBarContributor">
      </editor>
   </extension>

</plugin>
